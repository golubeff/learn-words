<h1>Listing words</h1>

<table cellspacing="0">
  <tr>
    <th>Russian</th>
    <th>English</th>
    <th colspan="4"></th>
  </tr>

<% @words.each do |word| %>
  <tr class="<%= cycle('odd', 'even') %> <%= 'archived' if word.archived? %>">
    <td><%= word.russian %></td>
    <td><%= word.english %></td>
    <td>Initial: <%= word.initial_counter %>. Showed: <%= word.show_counter %></td>
    <td>
      <% if word.archived? %>
        <%= link_to 'Unarchive', unarchive_word_path(word), :method => "post" %>
      <% else %>
        <%= link_to 'Archive', archive_word_path(word), :method => "post" %>
      <% end %>
      </td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Word', new_word_path %>
